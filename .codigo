
#include <stdio.h>//Incluimos a biblioteca padrao de entrada e saida de dados
#include <stdlib.h>//Incluimos as bibliotecas padrao do c

struct Node{
	int num;
	struct Node *prox;
};
typedef struct Node node;

int tam;


int menu(void);
void opcao(node *FILA, int op);
void inicia(node *FILA);
int vazia(node *FILA);
node *aloca();
void insere(node *FILA);
node *retira(node *FILA);
void exibe(node *FILA);
void libera(node *FILA);

//Função principal do sistema
int main(void)
{
	node *FILA = (node *) malloc(sizeof(node));
	if(!FILA){
		printf("Sem memoria disponivel!\n");
		exit(1);
	}else{
	inicia(FILA);
	int opt;

	do{
		opt=menu();
		opcao(FILA,opt);
	}while(opt);

	free(FILA);
	return 0;
	}
}

//Função que printa as opções do menu na tela
int menu(void)
{
	int opt;

	printf("Escolha a opcao\n");
	printf("0. Sair\n");
	printf("1. Zerar fila\n");
	printf("2. Exibir fila\n");
	printf("3. Adicionar numero na Fila\n");
	printf("4. Retirar numero da Fila\n\n");
	printf("Opcao: "); scanf("%d", &opt);

	return opt;
}

//Função que identifica a opção escolhida
void opcao(node *FILA, int op)
{
	node *tmp;
	switch(op){
		case 0:
			libera(FILA);
			break;

		case 1:
			libera(FILA);
			inicia(FILA);
			break;

		case 2:
			exibe(FILA);
			break;

		case 3:
			insere(FILA);
			break;

		case 4:
			tmp= retira(FILA);
			if(tmp != NULL){
				printf("\nRetirado: %3d\n\n", tmp->num);
				free(tmp);
			}
			break;

		default:
			printf("\nComando invalido\n\n");
	}
}

//Função que inicia o uso do algoritmo de dados fila
void inicia(node *FILA)
{
	FILA->prox = NULL;
	tam=0;
}

//Função que esvazia a fila
int vazia(node *FILA)
{
	if(FILA->prox == NULL)
		return 1;
	else
		return 0;
}

//Função que aloca um espaço na memória para o valor a ser inserido
node *aloca()
{
	node *novo=(node *) malloc(sizeof(node));
	if(!novo){
		printf("\nSem memoria disponivel!\n");
		exit(1);
	}else{
		printf("\nNovo elemento: "); scanf("%d", &novo->num);
		return novo;
	}
}

//Função que insere u valor na fila
void insere(node *FILA)
{
	node *novo=aloca();
	novo->prox = NULL;

	if(vazia(FILA))
		FILA->prox=novo;
	else{
		node *tmp = FILA->prox;

		while(tmp->prox != NULL)
			tmp = tmp->prox;

		tmp->prox = novo;
	}
	tam++;
}

//Função que retira um valor da fila
node *retira(node *FILA)
{
	if(FILA->prox == NULL){
		printf("\nFila ja esta vazia\n");
		return NULL;
	}else{
		node *tmp = FILA->prox;
		FILA->prox = tmp->prox;
		tam--;
		return tmp;
	}

}

//Função que exibe os valores da fila
void exibe(node *FILA)
{
	if(vazia(FILA)){
		printf("Fila vazia!\n\n");
		return ;
	}

	node *tmp;
	tmp = FILA->prox;
	printf("Fila :");
	while( tmp != NULL){
		printf("%5d", tmp->num);
		tmp = tmp->prox;
	}
	printf("\n        ");
	int count;
	for(count=0 ; count < tam ; count++)
		printf("  ^  ");
	printf("\nOrdem:");
	for(count=0 ; count < tam ; count++)
		printf("%5d", count+1);


	printf("\n\n");
}


//Função que elimina o primeiro elemento da fila
void libera(node *FILA)
{
	if(!vazia(FILA)){
		node *proxNode,
			  *atual;

		atual = FILA->prox;
		while(atual != NULL){
			proxNode = atual->prox;
			free(atual);
			atual = proxNode;
		}
	}
}
